<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/inter"
        android:text="Здесь вы можете ознакомиться с нашим приложением"
        android:textColor="#525254"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Главная страница"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:text="Что есть в приложении?"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBalance"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonBalance"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="Ваш баланс"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonWell"
        app:layout_constraintEnd_toStartOf="@+id/buttonInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonWell"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="Курсы валют"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/ButtonNotes"
        app:layout_constraintEnd_toStartOf="@+id/buttonTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBalance" />

    <Button
        android:id="@+id/buttonTest"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:text="Узнай насколько ты крутой инвестор"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/ButtonNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonWell"
        app:layout_constraintTop_toBottomOf="@+id/buttonInfo" />

    <Button
        android:id="@+id/ButtonNotes"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#8377DB"
        android:padding="15dp"
        android:fontFamily="@font/inter"
        android:text="Мои заметки"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWell" />

    <Button
        android:id="@+id/buttonCalendar"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:padding="15dp"
        android:text="Календарь инвестора"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonProCoach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonNotes" />

    <Button
        android:id="@+id/buttonProCoach"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="#8377DB"
        android:fontFamily="@font/inter"
        android:padding="15dp"
        android:text="Профессиональное обучение"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalendar" />

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_5"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="#E5E5E5"
        app:layout_constraintEnd_toStartOf="@+id/buttonSettings"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_4"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#E5E5E5"
        android:elevation="2dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBalance"
        app:layout_constraintEnd_toEndOf="@+id/buttonBalance"
        app:layout_constraintStart_toStartOf="@+id/buttonBalance"
        app:layout_constraintTop_toTopOf="@+id/buttonBalance" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/img_2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/buttonNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/img_1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/buttonStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/img"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/buttonPortfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/img_3"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/USDView"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#E5E5E5"
        android:elevation="2dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonWell"
        app:layout_constraintEnd_toEndOf="@+id/buttonWell"
        app:layout_constraintStart_toStartOf="@+id/buttonWell"
        app:layout_constraintTop_toTopOf="@+id/buttonWell" />

    <TextView
        android:id="@+id/EURView"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#E5E5E5"
        android:elevation="2dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonWell"
        app:layout_constraintEnd_toEndOf="@+id/buttonWell"
        app:layout_constraintStart_toStartOf="@+id/buttonWell"
        app:layout_constraintTop_toTopOf="@+id/buttonWell"
        app:layout_constraintVertical_bias="0.925" />

</androidx.constraintlayout.widget.ConstraintLayout>